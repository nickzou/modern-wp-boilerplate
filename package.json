{
  "name": "modern-wp-boilerplate",
  "version": "1.0.0",
  "description": "A modern WordPress boilerplate",
  "license": "ISC",
  "author": "Nick Zou",
  "type": "commonjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "composer:install:dev": "composer install",
    "composer:update:dev": "composer update",
    "composer:install:theme": "composer install -d ./web/wp-content/themes/base-theme",
    "composer:update:theme": "composer update -d ./web/wp-content/themes/base-theme",
    "composer:install": "npm run composer:install:dev && npm run composer:install:theme",
    "composer:update": "npm run composer:update:dev && npm run composer:update:theme",
    "env:update": "wp-env start --update",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:clean": "wp-env clean all",
    "env:destroy": "wp-env destroy",
    "wp:create-block": "bash ./scripts/create-block.sh",
    "wp:blocks:build": "wp-scripts build --source-path=src/blocks --output-path=web/wp-content/themes/base-theme/blocks",
    "wp:blocks:watch": "npm run wp:blocks:build -- --watch",
    "wp:cli": "wp-env run cli",
    "setup:infra": "bash ./scripts/create-env-tpl.sh && bash ./scripts/create-tfvars.sh && bash ./scripts/create-infra.sh && ./scripts/set-repo-droplet-id.sh",
    "setup:wp": "bash ./scripts/rename-theme-folder.sh && bash ./scripts/rename-theme-in-package-json.sh && .scripts/rename-theme-in-wp-env-json.sh && bash ./scripts/rename-theme-in-bs-config-json && bash ./scripts/rename-theme-in-tailwind-css.sh && bash ./scripts/install-theme-dependencies.sh && ./scripts/install-project-dependencies.sh",
    "admin:tailwind:dev": "tailwindcss -i ./admin-tailwind.css -o ./web/wp-content/themes/base-theme/css/admin-tailwind.css",
    "admin:tailwind:prod": "tailwindcss -i ./admin-tailwind.css -o ./web/wp-content/themes/base-theme/css/admin-tailwind.css -m",
    "admin:tailwind:watch": "tailwindcss -i ./admin-tailwind.css -o ./web/wp-content/themes/base-theme/css/admin-tailwind.css -w",
    "tailwind:dev": "tailwindcss -i ./tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css",
    "tailwind:prod": "tailwindcss -i ./tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css -m",
    "tailwind:watch": "tailwindcss -i ./tailwind.css -o ./web/wp-content/themes/base-theme/css/tailwind.css -w",
    "php:format": "prettier . --write",
    "php:format:watch": "chokidar './src/**/*.php' './web/wp-content/themes/**/*.php' -c 'prettier --write {path}'",
    "php:lint": "esrun phplint.mjs",
    "php:lint:watch": "chokidar './src/**/*.php' './web/wp-content/themes/base-theme/**/*.php' -i '{vendor}' -c 'php -l {path}'",
    "ts:dev": "parcel build src/ts/*.ts --dist-dir web/wp-content/themes/base-theme/js --no-optimize",
    "ts:prod": "parcel build src/ts/*.ts --dist-dir web/wp-content/themes/base-theme/js",
    "ts:watch": "parcel watch src/ts/*.ts --dist-dir web/wp-content/themes/base-theme/js",
    "ts:watch:hot": "parcel serve src/ts/*.ts --dist-dir web/wp-content/themes/base-theme/js --hmr-host 1234",
    "ts:typecheck": "tsc --noEmit --project tsconfig.json",
    "ts:typecheck:watch": "chokidar ./src/ -c 'npm run ts:typecheck'",
    "biome": "biome check --write",
    "biome:watch": "chokidar './src/**/*' './web/wp-content/themes/base-theme/**/*' -c 'biome check {path} --write'",
    "browsersync": "browser-sync start --config bs-config.json",
    "lightningcss:dev": "lightningcss ./src/css/** --output-dir ./web/wp-content/themes/base-theme/css/ --sourcemap --bundle --targets \">= 0.25%\"",
    "lightningcss:prod": "lightningcss ./src/css/** --output-dir ./web/wp-content/themes/base-theme/css/ --minify --bundle --targets \">= 0.25%\"",
    "lightningcss:watch": "chokidar './src/css/**/*.css' -c 'lightningcss --sourcemap --bundle --targets \">= 0.25%\" {path} -o ./web/wp-content/themes/base-theme/css/$(basename {path})'",
    "dev": "npm run tailwind:dev && npm run admin:tailwind:dev && npm run lightningcss:dev && npm run biome && npm run ts:typecheck && npm run wp:blocks:build && npm run ts:dev && npm run php:format && npm run php:lint",
    "prod": "npm run tailwind:prod &&  npm run admin:tailwind:prod && npm run lightningcss:prod && npm run biome && npm run ts:typecheck && npm run wp:blocks:build && npm run ts:prod && npm run php:format && npm run php:lint",
    "watch": "concurrently -k --names 'Tailwind,Admin Tailwind,CSS,TS Typecheck,Biome,TypeScript,Blocks,PHP Format,PHP Lint,BrowserSync' --prefixColors '#0EA5E9,#0EA5E9,#F9BB03,#167ECE,#64A8F9,#167ECE,#B6BD73,#4F5B93,#4F5B93,#F34D4D' 'npm run tailwind:watch' 'npm run admin:tailwind:watch' 'npm run lightningcss:watch'  'npm run ts:typecheck:watch' 'npm run biome:watch' 'npm run ts:watch' 'npm run wp:blocks:watch' 'npm run php:format:watch' 'npm run php:lint:watch' 'npm run browsersync'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@prettier/plugin-php": "^0.24.0",
    "@types/alpinejs": "^3.13.11",
    "@types/wordpress__block-editor": "^14.21.0",
    "@wordpress/block-editor": "^15.6.0",
    "@wordpress/blocks": "^15.6.0",
    "@wordpress/components": "^30.6.0",
    "@wordpress/env": "^10.33.0",
    "@wordpress/i18n": "^6.6.0",
    "@wordpress/scripts": "^30.26.0",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "esrun": "^3.2.30",
    "glob": "^11.0.3",
    "lightningcss-cli": "^1.30.2",
    "lucide-react": "^0.546.0",
    "parcel": "^2.16.0",
    "prettier": "^3.6.2",
    "prettier-plugin-blade": "^2.1.21",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.3",
    "@tailwindcss/cli": "^4.1.15",
    "@wordpress/core-data": "^7.33.0",
    "@wordpress/data": "^10.33.0",
    "alpinejs": "^3.15.0",
    "tailwindcss": "^4.1.15"
  },
  "dependencies": {
  }
}
